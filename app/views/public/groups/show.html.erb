<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-8 mx-auto'>
      <h2>Group Detail</h2>
      <table class='table'>
        <thead>
          <tr>
            <th></th>
            <th>エリア名</th>
            <th>紹介文</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
              <%= image_tag @group.get_group_image(500, 500), size: "150x150", class: "rounded" %>
            </td>
            </td>
            <td><%= @group.name %></td>
            <td><%= @group.introduction %></td>
            <td>
              <% if @group.owner_id == current_customer.id %>
                <%= link_to 'Edit', edit_group_path(@group), class: "btn btn-sm btn-success" %>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>