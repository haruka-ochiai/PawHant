$("#comment_textarea").on("input", function() {
  if ($(this).val().trim() !== "") {
    $("#submit_button").show();
  } else {
    $("#submit_button").hide();
  }
});

$("#comments_list").html("<%= j( render "public/comments/comments-lists", comment: @comment, pet_post: @pet_post )%>");
$('#comment_count').html("コメント件数：<%= @pet_post.comments.count %>")
$('#comment_textarea').val("");
$("#submit_button").hide();