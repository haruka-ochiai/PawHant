<div class="container">
  <div class="row">
    <div class="col-md-8 sm-5 mx-auto">
      <h4 class="my-3 ml-4">ペット情報編集</h4>
        <div class="container">
            <div class="row">
              <div class="col-md-12 sm-8 mx-auto">
                <%= form_with model: [@customer, @customer_pet], url: customer_customer_pet_path(@customer, @customer_pet), method: :patch do |f| %>
                  <%= render 'layouts/error', obj: @customer_pet %>
                  <%= render 'form', customer: @customer, customer_pet: @customer_pet, f: f  %>
                  <div class="form-group">
                  <%= f.submit "変更を保存", class: "btn btn-outline-secondary" %>
                  </div>
                <% end %>
              </div>
          </div>
        </div>
    </div>
  </div>
</div>
