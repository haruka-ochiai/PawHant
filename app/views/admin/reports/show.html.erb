<div class="card mx-auto mt-5" style="width: 500px;">
  <div class="card-body">
    <h3 class="card-title text-center">通報詳細</h3>
    <div class="row">
      <div class="col-6"><strong>通報ID</strong></div>
      <div class="col-6"><%= link_to @report.id %></div>
    </div>
    <div class="row">
      <div class="col-6"><strong>通報された会員</strong></div>
      <div class="col-6"><%= link_to @report.reported.name, admin_customer_path(@report.reported_id) %></div>
    </div>
    <div class="row">
      <div class="col-6"><strong>理由</strong></div>
      <div class="col-6"><%= I18n.t("enums.report.reason.#{@report.reason}") %></div>
    </div>
    <div class="row">
      <div class="col-6"><strong>通報者</strong></div>
      <div class="col-6"><%= @report.reporter.name %></div>
    </div>
    <div class="row">
      <div class="col-6"><strong>通報対象</strong></div>
      <div class="col-6"><%= @report.content_type %></div>
    </div>
    <div class="row">
      <div class="col-6"><strong>対応ステータス</strong></div>
      <div class="col-6">
        <%= form_with model:@report, url:admin_report_path(@report), method: :patch, local: true do |f| %>
          <div class="form-group text-center">
            <%= f.select :report_status, Report.report_statuses.keys.map { |key| [I18n.t("enums.report.report_status.#{key}"), key] }, {}, class: "form-control" %>
          </div>
          <%= f.submit '更新', class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="text-center">
    <%= link_to "通報一覧へ", admin_root_path %>
  </div>
</div>

