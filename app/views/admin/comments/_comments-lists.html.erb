<% pet_post.comments.each do |comment| %>
  <div class="card my-2">
    <div class="card-body p-2">
      <div class="d-flex">
        <div class="card-title ms-3 mb-1">
          <%= link_to comment.customer.name, admin_customer_path(comment.customer)  %>
        </div>
        <div class="mx-3">
          <%= "#{time_ago_in_words(comment.created_at)}前" %>
        </div>
      </div>
      <p class="card-text mb-2"><%= comment.comment %></p>
      <div class="mx-3">
        <%= link_to "削除", admin_comment_path(comment), method: :delete, class: "btn btn-sm btn-outline-secondary" %>
      </div>
    </div>
  </div>
<% end %>
