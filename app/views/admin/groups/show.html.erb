<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-8 mx-auto'>
      <h2>グループ詳細</h2>
      <table class='table'>
        <thead>
          <tr>
            <th></th>
            <th>エリア名</th>
            <th>紹介文</th>
            <th>メンバー</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
              <%= image_tag @group.get_group_image(500, 500), size: "150x150", class: "rounded" %>
            </td>
            </td>
            <td><%= @group.name %></td>
            <td><%= @group.introduction %></td>
            <td>
              <% @customers.each do |customer| %>
　　            <li style="list-style: none;">
　　            <%= link_to customer.name, admin_customer_path(customer) %>
　　            </li>
              <% end %>
            </td>
            <td>
              <% if current_admin %>
　　            <%= link_to '削除', admin_group_path(@group), method: :delete, class: "btn btn-sm btn-success" %>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>