<table class='table'>
  <thead>
    <tr>
      <th></th>
      <th>エリア名(グループ名)</th>
      <th>メンバー数</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% groups.each do |group| %>
      <tr>
        <td>
          <%= image_tag group.get_group_image(500, 500), size: "50x50", class: "rounded" %>
        </td>
        <td><%= group.name %></td>
        <td><%= group.customers.count %></td>
        <td><%= link_to '詳細を見る', admin_group_path(group), class: "btn btn-sm btn-outline-warning" %></td>
      </tr>
    <% end %>
  </tbody>
</table>